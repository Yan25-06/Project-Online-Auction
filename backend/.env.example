# Copy this file to `.env` and fill in real credentials
# SMTP configuration (used by EmailService)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Optional friendly from name
EMAIL_FROM_NAME="Sàn Đấu Giá"

# Frontend URL used to generate product links in emails (defaults to http://localhost:5173 if not set)
FRONTEND_URL=http://localhost:5173
